{
  "tech_stack": [
    "JavaScript (Node.js >=16)",
    "Express 4",
    "helmet",
    "cors",
    "express-rate-limit",
    "Winston",
    "SSE (Server-Sent Events)"
  ],
  "features": [
    {
      "name": "Health API",
      "description": "Healthcheck del servidor para validar disponibilidad.",
      "files": [
        "backend/server.js"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "info": { "title": "Health API", "version": "1.0.0" },
        "servers": [ { "url": "http://localhost:3000" } ],
        "paths": {
          "/health": {
            "get": {
              "summary": "Healthcheck",
              "responses": { "200": { "description": "OK" } }
            }
          }
        }
      }
    },
    {
      "name": "Economy API",
      "description": "Econom√≠a en memoria: resumen de supply, lista de transacciones, stream SSE y burn (admin).",
      "files": [
        "backend/routes/economy.js",
        "backend/services/memoryStore.js",
        "backend/middleware/adminAuth.js",
        "backend/server.js"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "info": { "title": "Economy API", "version": "1.0.0" },
        "servers": [ { "url": "http://localhost:3000" } ],
        "paths": {
          "/api/economy/supply": {
            "get": { "summary": "Obtener resumen de supply", "responses": { "200": { "description": "OK" } } }
          },
          "/api/economy/supply/txs": {
            "get": {
              "summary": "Listar transacciones de supply",
              "parameters": [
                { "name": "limit", "in": "query", "schema": { "type": "integer", "default": 20 } },
                { "name": "offset", "in": "query", "schema": { "type": "integer", "default": 0 } }
              ],
              "responses": { "200": { "description": "OK" } }
            }
          },
          "/api/economy/supply/stream": {
            "get": { "summary": "Stream SSE con snapshots de supply", "responses": { "200": { "description": "SSE stream" } } }
          },
          "/api/economy/supply/burn": {
            "post": {
              "summary": "Quemar una cantidad del supply (admin)",
              "requestBody": {
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": { "amount": { "type": "integer", "minimum": 1 } },
                      "required": ["amount"]
                    }
                  }
                }
              },
              "responses": { "200": { "description": "OK" }, "400": { "description": "invalid_amount" }, "403": { "description": "admin_required|unauthorized" } }
            }
          }
        }
      }
    }
  ]
}
