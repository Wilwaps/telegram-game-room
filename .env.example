# ============================================
# CONFIGURACIÓN DEL SERVIDOR
# ============================================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# URL del frontend (para CORS)
FRONTEND_URL=http://localhost:3000

# ============================================
# REDIS - Base de Datos en Memoria
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# TTL (Time To Live) en segundos
ROOM_EXPIRY=3600
SESSION_EXPIRY=86400
CACHE_EXPIRY=300

# ============================================
# TELEGRAM BOT API
# ============================================
TELEGRAM_BOT_TOKEN=tu_token_aqui
TELEGRAM_BOT_USERNAME=tu_bot_username
TELEGRAM_WEBHOOK_URL=

# ============================================
# CONFIGURACIÓN DEL JUEGO
# ============================================
# Tiempo máximo por turno (segundos)
TURN_TIMEOUT=30

# Máximo de salas simultáneas
MAX_ROOMS=1000

# Máximo de jugadores por sala
MAX_PLAYERS_PER_ROOM=2

# Tiempo de espera antes de eliminar sala vacía (segundos)
EMPTY_ROOM_TIMEOUT=60

# ============================================
# SEGURIDAD
# ============================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins permitidos (separados por coma)
ALLOWED_ORIGINS=http://localhost:3000,https://tu-dominio.com

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# ============================================
# MONITOREO Y MÉTRICAS
# ============================================
ENABLE_METRICS=true
METRICS_PORT=9090

# ============================================
# FEATURES FLAGS
# ============================================
ENABLE_AI_MODE=true
ENABLE_TOURNAMENTS=false
ENABLE_CHAT=true
ENABLE_ACHIEVEMENTS=false
