{
  "name": "telegram-game-room",
  "version": "1.0.0",
  "description": "MiniApp de Telegram - Sala de Juegos Multijugador Escalable",
  "main": "backend/server.js",
  "type": "commonjs",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node backend/server.js",
    "dev": "node -r dotenv/config backend/server.js dotenv_config_path=.env.local",
    "dev:watch": "nodemon -r dotenv/config backend/server.js dotenv_config_path=.env.local --watch backend",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f redis",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint backend/**/*.js",
    "lint:fix": "eslint backend/**/*.js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "setup": "npm install && node scripts/setup.js",
    "db:seed": "node scripts/seed.js",
    "logs": "pm2 logs telegram-game-room"
  },
  "keywords": [
    "telegram",
    "miniapp",
    "game",
    "multiplayer",
    "socket.io",
    "tic-tac-toe",
    "real-time",
    "websocket"
  ],
  "author": "Tu Nombre",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "redis": "^4.6.5",
    "ioredis": "^5.3.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "uuid": "^9.0.0",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.7.0",
    "compression": "^1.7.4",
    "winston": "^3.8.2",
    "joi": "^17.9.2",
    "node-telegram-bot-api": "^0.61.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "jest": "^29.5.0",
    "eslint": "^8.40.0",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3"
  }
}
