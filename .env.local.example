# ============================================
# CONFIGURACIÓN LOCAL DE DESARROLLO
# ============================================
# Copiar este archivo a .env.local y completar con tus valores

# Entorno
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Redis local (Docker)
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=  # Dejar vacío para desarrollo local

# Telegram Bot de PRUEBA (NO usar el de producción)
TELEGRAM_BOT_TOKEN=tu_bot_de_prueba_token
TELEGRAM_BOT_USERNAME=tu_bot_de_prueba_username

# Admin
ADMIN_USERNAME=Wilcnct

# Frontend
FRONTEND_URL=http://localhost:3000

# Expiración (en segundos)
ROOM_EXPIRY=3600
SESSION_EXPIRY=86400
CACHE_EXPIRY=300

# Configuración de juego
TURN_TIMEOUT=30
MAX_ROOMS=1000
MAX_PLAYERS_PER_ROOM=2
EMPTY_ROOM_TIMEOUT=60

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS (para desarrollo local)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5500,http://127.0.0.1:5500

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# Métricas (opcional)
ENABLE_METRICS=false
METRICS_PORT=9090

# Feature flags (para testing)
ENABLE_AI_MODE=false
ENABLE_TOURNAMENTS=false
ENABLE_CHAT=false
ENABLE_ACHIEVEMENTS=false
